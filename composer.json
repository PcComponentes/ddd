  "license": "MIT",
  "type": "library",
  "autoload": {
    "psr-4": {
      "PcComponentes\\Ddd\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "PcComponentes\\Ddd\\Tests\\": "tests/"
    }
