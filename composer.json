  "require": {
    "php": "^8.0",
    "ext-json": "*",
    "ramsey/uuid": "^4.2"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.0",
    "phpro/grumphp": "^1.3",
    "pccomponentes/coding-standard": "^1.2",
    "php-parallel-lint/php-parallel-lint": "^1.2",
    "phpstan/phpstan": "^0.12.82",
    "sebastian/phpcpd": "^6.0"
  },
  "scripts": {
    "post-install-cmd": [
      "rm -rf .git/hooks",
      "mkdir -p .git/hooks",
      "cp -r ./config/hooks/* .git/hooks"
    ]
  }
}
